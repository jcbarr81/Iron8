{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serve API (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["run_server:app", "--reload", "--port", "8000"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.example"
    },
    {
      "name": "PyTest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env.example"
    }
  ]
}
